<% layout("./layouts/boilerplate") %>

<script>
  const mapToken = "<%= process.env.MAP_TOKEN %>";
  const listing = <%- JSON.stringify(listing) %>;
</script>


<div class="row mt-3 mb-3 justify-content-center">
  <div class="col-md-7">
    <h3><i><b><%= listing.title %> : </b></i></h3>
    <br/>

    <div class="card listing-card">
      <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-2">
          <h5 class="card-title mt-3"><b>Details</b></h5>
          <small class="text-muted"><i>Created by: <%= listing.owner.username %></i></small>
        </div>

        
        <ul class="card-text">
          <li><%= listing.description %></li>
          <li>&#8377 <%= listing.price.toLocaleString("en-IN") %> / Night</li>
          <li>Location: <%= listing.location %></li>
          <li><%= listing.country %></li>
        </ul>
      </div>
    </div>
    
    <% if(currentUser && currentUser._id.equals(listing.owner._id)) { %> 
      <div class="btns mt-4 d-flex justify-content-center gap-5">
            <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark px-4 w-25 text-center">Edit Listing</a>
            <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" class="w-25">
                <button class="btn text-white px-4 w-100" style="background-color: #fe424d; border: none;"> Delete Listing</button>
            </form>
        </div>
    <% } %>

    <hr/>

    <div class="mt-3">  
      <% if (currentUser) { %>
        <h4>Leave a Review</h4>
        <form method="POST" 
          action="/listings/<%= listing._id %>/reviews" 
          novalidate 
          class="needs-validation"
        >

          <div class="mb-3 mt-3 col-md-5">
            <label for="rating" class="form-label">Rating</label>
            <fieldset class="starability-slot">
              <input 
                type="radio" 
                id="no-rate" 
                class="input-no-rate" 
                name="review[rating]" 
                value="1" 
                checked aria-label="No rating." 
              />
              <input type="radio" id="first-rate1" name="review[rating]" value="1" />
              <label for="first-rate1" title="Terrible">1 star</label>
              <input type="radio" id="first-rate2" name="review[rating]" value="2" />
              <label for="first-rate2" title="Not good">2 stars</label>
              <input type="radio" id="first-rate3" name="review[rating]" value="3" />
              <label for="first-rate3" title="Average">3 stars</label>
              <input type="radio" id="first-rate4" name="review[rating]" value="4" />
              <label for="first-rate4" title="Very good">4 stars</label>
              <input type="radio" id="first-rate5" name="review[rating]" value="5" />
              <label for="first-rate5" title="Amazing">5 stars</label>
            </fieldset>

          </div>
        
          <div class="mb-3 mt-3">
            <label for="comment" class="form-label">Comments</label>
            <textarea 
              name="review[comment]" 
              id="comment" 
              cols="30" 
              rows="4" 
              class="form-control"
              required 
              minlength="1"
            ></textarea>

            <div class="invalid-feedback">Your Feedback is <b>essential</b> </div>
          </div>

          <button class="btn btn-outline-dark col-2">Submit</button>

        </form>
      <% } %>
      

      <hr/>

      <% if (listing.reviews.length >0 ) { %>
        <div class="row">
          <h4>All Reviews</h4>
          <% for(review of listing.reviews){ %>
            <div class="card col-5 ms-3 mr-3 mb-3 ">
              <div class="card-body">
                <h5 class="card-title"> <small class="text-muted"><i><%= review.author.username %></i></small> </h5>
                <p class="starability-result card-text" data-rating= "<%= review.rating %>"></p>
                <p class="card-text"> <%= review.comment %> </p>
                
                <form class="mb-3" method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                  <button class="btn btn-sm btn-dark">Delete</button>
                </form>
              </div>
            </div>
          <% } %>
        </div>

      <% } %>
      
    </div>
    <div class="col-8 offset-0 mt-3">
      <h3>Where you'll be</h3>
      <div id="map"></div>
    </div>
  </div> 
</div>

<script src="/js/map.js"> </script>






    

