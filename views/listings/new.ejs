<% layout("./layouts/boilerplate") %>

<div class="row justify-content-center">
  <div class="col-md-8">
    <h1 class="mb-4 mt-4  text-center">Create a New Listing</h1>    
    <form 
      method="POST" 
      action="/listings" 
      novalidate class="needs-validation"
      enctype="multipart/form-data"
      >
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input name="listing[title]" 
          placeholder="Add a catchy title" 
          type="text" 
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks great!</div>
        <div class="invalid-feedback">Please enter a title.</div>
      </div>
        
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          name="listing[description]"
          placeholder="Enter description"
          class="form-control" 
          required>
        </textarea>
        <div class="valid-feedback">Nice description!</div>
        <div class="invalid-feedback">Description is required.</div>
      </div>


      <div class="mb-3">
        <label for="image" class="form-label">Upload Listing Image</label>
        <input
          name="listing[image]"
          type="file"
          class="form-control"
          required
        />
        <div class="valid-feedback">Attractive!</div>
        <div class="invalid-feedback">Enter a valid image URL</div>
      </div>
      
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input 
            name="listing[price]" 
            placeholder="eg: 1400" 
            type="number" 
            class="form-control"
            required
          />
          <div class="valid-feedback">Price added!</div>
          <div class="invalid-feedback">Please enter a valid price.</div>
        </div>
          
        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">Country</label>
          <input name="listing[country]" 
            placeholder="eg: India" 
            type="text" 
            class="form-control"
            required
          />
          <div class="valid-feedback">Country looks valid!</div>
          <div class="invalid-feedback">Please enter a country name.</div>
        </div>
      </div>
        
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
          name="listing[location]"
          placeholder="eg: Chikkamagaluru, Karnataka"
          type="text"
          class="form-control"
          required
        />
        <div class="valid-feedback">Location looks good!</div>
        <div class="invalid-feedback">Please enter a location.</div>
      </div>  
      
      <div class="text-center">
        <button class="btn btn-primary px-4 w-25 mb-4 mt-3">Add Listing</button> 
      </div>
      

    </form>
  </div> 
</div>
